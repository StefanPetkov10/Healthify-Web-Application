@using HealthifyApp.Web.ViewModels.Admin.TargetNutrition;
@model IEnumerable<UserTargetNutritionViewModel>

@{
    ViewData["Title"] = "Target Nutrition Management";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Target Nutrition Management</h1>

    @foreach (var user in Model)
    {
        <div class="mb-4">
            <h3 class="fw-bold text-primary">@($"{user.FirstName} {user.LastName}")</h3>

            @if (user.TargetNutrition.Any())
            {
                <table class="table table-striped table-hover mt-3">
                    <thead>
                        <tr>
                            <th>Goal Type</th>
                            <th>Start Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var targetNutrition in user.TargetNutrition)
                        {
                            <tr>
                                <td>@targetNutrition.GoalName</td>
                                <td>@targetNutrition.StartDate</td>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@targetNutrition.Id" class="btn btn-danger">
                                        <i class="bi bi-pencil-square"></i> Delete Target Nutrition
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">This user has no target nutrition.</p>
            }
        </div>
    }
</div>