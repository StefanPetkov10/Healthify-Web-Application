@using HealthifyApp.Web.ViewModels.Admin.TargetNutrition
@model AdminDeleteTargetNutritionViewModel

<h2>Delete Target Nutrition</h2>

@{
    ViewData["Title"] = "Delete Goal";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<p>Are you sure you want to delete the target nutrition permanently. : <strong>@Model.GoalName</strong>?</p>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
