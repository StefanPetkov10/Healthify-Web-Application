@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <!-- Header Section -->
    <div class="text-center">
        <h1 class="display-4 mb-4 text-primary fw-bold">Welcome to the Admin Dashboard</h1>
        <p class="lead mb-5 text-muted">Manage your application efficiently with the tools below:</p>
    </div>

    <!-- Cards Section -->
    <div class="row g-4">

        <!-- Manage Users -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="fas fa-users-cog fa-3x text-primary mb-3"></i>
                    <h5 class="card-title mb-3">Manage Users</h5>
                    <p class="card-text text-muted">Assign roles, make users Admins, or soft delete users.</p>
                    <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index" class="btn btn-primary w-100 mt-auto">
                        <i class="fas fa-arrow-right"></i> Go to Users
                    </a>
                </div>
            </div>
        </div>

        <!-- Manage Goals -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="fas fa-bullseye fa-3x text-success mb-3"></i>
                    <h5 class="card-title mb-3">Manage Goals</h5>
                    <p class="card-text text-muted">Delete or update goal entries efficiently.</p>
                    <a asp-area="Admin" asp-controller="Goal" asp-action="Index" class="btn btn-success w-100 mt-auto">
                        <i class="fas fa-arrow-right"></i> Go to Goals
                    </a>
                </div>
            </div>
        </div>

        <!-- Manage Nutrition -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="fas fa-apple-alt fa-3x text-info mb-3"></i>
                    <h5 class="card-title mb-3">Manage Nutrition</h5>
                    <p class="card-text text-muted">Delete or manage target nutrition data.</p>
                    <a asp-area="Admin" asp-controller="Nutrition" asp-action="Index" class="btn btn-info w-100 mt-auto">
                        <i class="fas fa-arrow-right"></i> Go to Nutrition
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
