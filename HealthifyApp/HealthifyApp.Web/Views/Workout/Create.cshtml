@using HealthifyApp.Web.ViewModels.Workout
@model CreateWorkoutFormModel

<h2>Create Workout</h2>

@{
    ViewData["Title"] = "Create Workout";
}


<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Duration">Duration in minutes</label>
        <input asp-for="Duration" class="form-control" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ScheduleDateTime"></label>
        <input asp-for="ScheduleDateTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="ScheduleDateTime" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
