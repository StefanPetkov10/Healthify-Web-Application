@using HealthifyApp.Web.ViewModels.UserProfile
@model DeleteUserProfileViewModel

<h2>Delete User Profile</h2>

@{
    ViewData["Title"] = "Delete UserProfile";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<p>Are you sure you want to delete the user profile: <strong>@Model.Name</strong>?</p>

<form asp-action="SoftDeleteConfirmed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
