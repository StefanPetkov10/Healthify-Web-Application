@using HealthifyApp.Web.ViewModels.NutritionIntake
@model AddTodayNutritionIntakeFormModel

<h2>Add More Intake</h2>

@{
    ViewData["Title"] = "Nutrition Intake";
}

<form asp-action="AddMore" method="post" autocomplete="off">
    <div class="form-group">
        <label asp-for="Date">Date</label>
        <input asp-for="Date" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Calories">Calories</label>
        <input asp-for="Calories" class="form-control" autocomplete="off" />
        <span asp-validation-for="Calories" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Protein">Protein (g)</label>
        <input asp-for="Protein" class="form-control" autocomplete="off" />
        <span asp-validation-for="Protein" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Carbohydrates">Carbohydrates (g)</label>
        <input asp-for="Carbohydrates" class="form-control" autocomplete="off" />
        <span asp-validation-for="Carbohydrates" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Fats">Fats (g)</label>
        <input asp-for="Fats" class="form-control" autocomplete="off" />
        <span asp-validation-for="Fats" class="text-danger"></span>
    </div>

    <div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
