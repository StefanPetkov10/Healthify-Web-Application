@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <!-- Hero Section with Greeting and Motivation -->
    <div class="jumbotron text-center bg-light p-5 mb-5">
        <h1 class="display-4">Welcome to Healthify, @User.Identity.Name!</h1>
        <p class="lead">"Your health journey starts with small steps. Keep moving forward!"</p>
        <a href="/UserProfile" class="btn btn-primary btn-lg">Get Started</a>
    </div>

    <!-- Quick Access Widgets -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Workout Summary</h5>
                    <p>Last workout: <strong>45 mins of Cardio</strong></p>
                    <a href="/Workout" class="btn btn-outline-success">Start a New Workout</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Progress Log</h5>
                    <p>Weight: <strong>72 kg</strong> | Goal: <strong>70 kg</strong></p>
                    <a href="/ProgressLog" class="btn btn-outline-primary">Update Progress</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Daily Goals</h5>
                    <ul>
                        <li>Water Intake: <span class="text-success">Completed</span></li>
                        <li>Calories: <span class="text-warning">In Progress</span></li>
                    </ul>
                    <a href="/NutritionPlan" class="btn btn-outline-warning">View Goals</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Calculators Section -->
    <div class="my-4">
        <h2>Health Calculators</h2>
        <div class="row">
            <div class="col-md-4 mb-3">
                <a href="/Calculators/BMI" class="btn btn-lg btn-outline-info w-100">BMI Calculator</a>
            </div>
            <div class="col-md-4 mb-3">
                <a href="/Calculators/CalorieIntake" class="btn btn-lg btn-outline-info w-100">Calorie Intake Calculator</a>
            </div>
            <div class="col-md-4 mb-3">
                <a href="/Calculators/WaterIntake" class="btn btn-lg btn-outline-info w-100">Water Intake Calculator</a>
            </div>
        </div>
    </div>

